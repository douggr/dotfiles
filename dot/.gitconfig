[alias]
  br      = branch
  brs     = branch -a
  branches= branch -a
  ci      = commit
  co      = checkout
  cr      = clone --recursive
  cred    = "!f() { git commit --amend --author \"$1 <$2>\" -C HEAD; }; f"
  d       = diff --patch-with-stat
  df      = diff
  g       = grep -I
  l       = log --pretty=oneline -n 20 --graph
  lg      = log -p
  loq     = log --graph --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold white)â€” %an%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative
  pb      = publish-branch
  rb      = rbranch
  rc      = rank-contributors
  rv      = review
  remotes = remote -v
  sm      = show-merges
  s       = status -s
  st      = status
  tags    = tag -l
  undo    = push -f origin HEAD^:master

[apply]
  whitespace = fix

[branch]
  autosetuprebase = always

[core]
  excludesfile = ~/.gitignore
  attributesfile = ~/.gitattributes
  whitespace = space-before-tab,indent-with-non-tab,trailing-space

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[merge]
  log = true

# Use `origin` as the default remote on the `master` branch in all cases
[branch "master"]
  remote = origin
  merge = refs/heads/master

# URL shorthands
[url "git@github.com:"]
  insteadOf = "gh:"
  pushInsteadOf = "github:"
  pushInsteadOf = "git://github.com/"

[url "git://github.com/"]
  insteadOf = "github:"

[url "git@gist.github.com:"]
  insteadOf = "gst:"
  pushInsteadOf = "gist:"
  pushInsteadOf = "git://gist.github.com/"

[url "git://gist.github.com/"]
  insteadOf = "gist:"

[url "git@heroku.com:"]
  insteadOf = "heroku:"
